<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/21.0.0" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.HelloController"
      spacing="16">
    <padding>
        <Insets top="24" right="24" bottom="24" left="24"/>
    </padding>

    <children>
        <Label text="Sample Form" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

        <!-- Row 1: two inputs -->
        <HBox spacing="16">
            <children>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="First Name" />
                        <TextField fx:id="firstNameField" promptText="Enter first name" HBox.hgrow="ALWAYS"/>
                    </children>
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Last Name" />
                        <TextField fx:id="lastNameField" promptText="Enter last name" HBox.hgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Row 2: two inputs -->
        <HBox spacing="16">
            <children>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Email" />
                        <TextField fx:id="emailField" promptText="name@example.com" HBox.hgrow="ALWAYS"/>
                    </children>
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Phone" />
                        <TextField fx:id="phoneField" promptText="+1 555 0100" HBox.hgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Row 3: two inputs -->
        <HBox spacing="16">
            <children>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="Address" />
                        <TextField fx:id="addressField" promptText="123 Main St" HBox.hgrow="ALWAYS"/>
                    </children>
                </VBox>
                <VBox spacing="4" HBox.hgrow="ALWAYS">
                    <children>
                        <Label text="City" />
                        <TextField fx:id="cityField" promptText="Your city" HBox.hgrow="ALWAYS"/>
                    </children>
                </VBox>
            </children>
        </HBox>

        <!-- Actions -->
        <HBox spacing="12" alignment="CENTER_RIGHT">
            <children>
                <Button text="Clear" onAction="#onClearClick" />
                <Button text="Submit" onAction="#onSubmitClick" defaultButton="true" />
            </children>
        </HBox>

        <Label fx:id="statusLabel" text="" />
    </children>
</VBox>
